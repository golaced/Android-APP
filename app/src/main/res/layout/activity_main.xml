<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/brushed"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.test.MainActivity"
    android:orientation="vertical"
    android:focusable="false"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:maxWidth="150dp"
        android:src="@android:drawable/stat_sys_data_bluetooth"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageView1"

        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_action_database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btn_val"
        android:layout_alignEnd="@+id/btn_val"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btn_val"
        android:layout_alignStart="@+id/btn_val" />

    <TextView
        android:id="@+id/text_ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:text="v0.1"
        android:textColor="@color/darkgray" />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="status_text"
        android:textColor="@color/darkgray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_status"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

    </LinearLayout>

    <Button
        android:id="@+id/btn_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_val"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_col"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_col"
        android:layout_below="@+id/btn_val"
        android:layout_alignLeft="@+id/btn_val"
        android:layout_alignStart="@+id/btn_val"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/text_val_pitg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS地图"
        android:layout_below="@+id/btn_col"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/to_d2_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="调试"
        android:textColor="@color/white"
        android:layout_below="@+id/text_val_pitg"
        android:layout_alignLeft="@+id/text_val_pitg"
        android:layout_alignStart="@+id/text_val_pitg"
        android:layout_alignRight="@+id/text_val_pitg"
        android:layout_alignEnd="@+id/text_val_pitg" />

</RelativeLayout>